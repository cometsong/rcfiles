[user]
[alias]
    a     = add
    aa    = add .
    br    = branch --color --verbose
    bra   = branch --color --abbrev
    cfg   = config
    cfl   = config -l
    chk   = checkout
    cb    = checkout -b
    d     = diff --color
    dh    = diff --color HEAD
    vimdiff = difftool -y -t vimdiff -R
    rh    = reset HEAD
    s     = status
    st    = status
    ss    = status --short
    unadd = reset HEAD
[alias]
    sub   = submodule
    subrm = !~/.git_template_global/git-submodule-rm.sh
[alias]
    com   = commit -m
    p     = push --tags
    pom   = push --tags origin master
    u     = pull --tags
    uom   = pull --tags origin master
    f     = fetch
    mg    = merge
    mgf   = merge FETCH_HEAD
[alias]
    ll    = log --color --decorate --source
    lo    = log --color --oneline --decorate --source
    ls    = log --date=short --pretty='%C(yellow reverse)%h%Creset %C(yellow)%cn%Creset %C(green)%cd%Creset %d =%m %s'
[giggle]
    compact-mode = false
    main-window-maximized = false
    main-window-geometry = 961x1020+0+25
[user]
    name = JaminOne
    email = benjamin@cometsong.net
[init]
	templatedir = ~/.git_template_global
[core]
	excludesfile = ~/.gitignore_global
