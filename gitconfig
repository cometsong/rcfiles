[user]
    name = cometsong
    email = benjamin@cometsong.net
[alias]
    a     = add
    aa    = add .
    br    = branch --verbose
    bra   = branch --abbrev
    cfg   = config
    cfl   = config -l
    chk   = checkout
    cb    = checkout -b
    d     = diff
    dh    = diff HEAD
    vimdiff = difftool -y -t vimdiff -R
    rh    = reset HEAD
    s     = status
    st    = status
    ss    = status --short
    unadd = reset HEAD
[alias]
    sub   = submodule
    subrm = !~/.git_template_global/git-submodule-rm.sh
    subnames = "!git submodule status -- | cut -d' ' -f3 | sort"
    suburls = "!git submodule foreach -q git config remote.origin.url"
[alias]
    com   = commit -m
    p     = push --tags
    pom   = push --tags origin master
    u     = pull --tags
    uom   = pull --tags origin master
    f     = fetch
    mg    = merge
    mgf   = merge FETCH_HEAD
[alias]
    log   = log --decorate
    l     = log --pretty=format:'%C(yellow)%h %C(blue)%an %C(green)%ad %C(yellow)| %C(white)%s%C(yellow)%d' --graph --date=short
    ll    = log --decorate --pretty='Commit:%Creset %C(yellow)%h%C(green)%d%Creset %C(white)%ci%nAuthor:%Creset %C(blue)%an %Creset<%ae>%nTitle:  %C(white)%s%n'
    la    = log --decorate --date=short --pretty='%C(yellow)%h%Creset %C(blue)%cn%Creset %C(green)%cd %Creset%s%C(yellow)%d'
    ls    = log --decorate --oneline --date=short
[init]
    templatedir = ~/.git_template_global
[core]
    excludesfile = ~/.gitignore_global
[status]
    submodulesummary = true
[color]
    branch = true
    diff = true
    interactive = true
    status = true
    grep = true
    ui = true
;colors: normal, black, red, green, yellow, blue, magenta, cyan, white
[color "diff"]
    plain = white
    commit = yellow
    whitespace = normal
    old = red
    new = green
[color "decorate"]
    branch = green
    remoteBranch = green
    tag = cyan
    HEAD = blue
    tags = normal
    author = blue
[push]
    default = current
[git-up "fetch"]
    prune = true
    all = true
[git-up "rebase"]
    show-hashes = true
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
