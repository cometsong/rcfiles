##### Aliases #####

##### ls, the common ones I use a lot shortened for rapid fire usage
if [[ -n $APPLE ]]; then alias ls='ls -G'; fi           #I like color (on Mac OsX)
if [[ -n $LINUX ]]; then alias ls='ls --color=auto'; fi #I like color (on Ubuntu)
alias l='ls'               #size,show type,human readable
alias ll='ls -lh'          #size,show type,human readable
alias l.='ls -d .[^.]*'    #size,show type,.dotfiles only
alias ll.='ls -ld .[^.]*'  #long,size,show type,.dotfiles only
alias la='ls -lAh'         #long list,show almost all,show type,human readable
alias lsa='ls -Ah'         #short list,show almost all,show type,human readable
alias lr='ls -tRh'         #short list,sorted by date,recursive,show type,human readable
alias llr='ls -lRh'        #long list,recursive,show type,human readable
alias lt='ls -lth'         #long list,sorted by date,show type,human readable
alias lsd='ls -ld *(-/DN)' #ls long, dirs only

##### cd, because typing the backslash is ALOT of work!!
#alias .='cd ../'  # removed b/c .. already does 'cd ../" and b/c '.' => 'source'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'

##### Screen aliases #####
# - add a new screen , or entire session
alias sc="screen"           # start a new screen session
alias scl="screen -ls"      # list out screen sessions
alias scr="screen -r"       # resume a screen session
alias scd="screen -d -r"    # detach and resume an attached screen session
alias scn="screen -dm -c"   # start new detached session using the screenrc config file that follows -c

##### vnc #####
alias vncstart2='vnc4server -geometry 1500x1100 -depth 16 -desktop `uname -n`2 :2' #desktop size
alias vncstart3='vnc4server -geometry 1430x850 -depth 16 -desktop `uname -n`3 :3'  #macbook size
alias vnckill="vnc4server -kill" #followed by :1, :2

##### apache2 #####
alias htc="sudo vi /etc/apache2/httpd.conf"
alias htr="sudo /etc/init.d/apache2 restart"

##### perls #####
alias cpan="sudo cpan"

# Mac aliases...
if [[ -n $APPLE ]]; then {
  alias top="top -n40 -ocpu -Orsize"
  alias errcode='grep -e"$1" /System/Library/Frameworks/CoreServices.framework/Versions/A/Frameworks/CarbonCore.framework/Headers/MacErrors.h | more'
  alias macvim="open /Applications/MacVim.app"
}; fi

alias dmesg="sudo dmesg"
alias su="su -s /bin/zsh"

alias e="$EDITOR"
alias h="history"
alias vi='vim'

alias grep="grep --color"
alias psx='ps xf -o pid,ppid,pcpu,pmem,vsz,cputime,euser,cmd --sort pid,pcpu --heading --lines=50'
alias psa='ps -A f -o pid,ppid,pcpu,pmem,vsz,cputime,euser,cmd --sort pid,pcpu --heading --lines=50'
alias date='date +"%Y-%m-%d %H:%M:%S"'
